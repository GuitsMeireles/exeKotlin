<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/numero_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="6dp"
        android:hint="@string/number_type_it"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/numero_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/numero_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:hint="@string/number_type_it"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/calculaButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numero_1" />

    <Button
        android:id="@+id/calculaButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="4dp"
        android:text="@string/calculate"
        app:layout_constraintBottom_toTopOf="@+id/somaTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numero_2" />

    <TextView
        android:id="@+id/somaTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/subtracaoTextView"
        app:layout_constraintEnd_toEndOf="@+id/subtracaoTextView"
        app:layout_constraintStart_toStartOf="@+id/subtracaoTextView"
        app:layout_constraintTop_toBottomOf="@+id/calculaButton" />

    <TextView
        android:id="@+id/subtracaoTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/multiplicacaoTextView"
        app:layout_constraintEnd_toEndOf="@+id/multiplicacaoTextView"
        app:layout_constraintStart_toStartOf="@+id/multiplicacaoTextView"
        app:layout_constraintTop_toBottomOf="@+id/somaTextView" />

    <TextView
        android:id="@+id/multiplicacaoTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/divisaoTextView"
        app:layout_constraintEnd_toEndOf="@+id/divisaoTextView"
        app:layout_constraintStart_toStartOf="@+id/divisaoTextView"
        app:layout_constraintTop_toBottomOf="@+id/subtracaoTextView" />

    <TextView
        android:id="@+id/divisaoTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multiplicacaoTextView" />

    <Button
        android:id="@+id/bt_voltar"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="22dp"
        android:text="@string/btn_return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divisaoTextView" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="322dp"
        android:layout_height="130dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="26dp"
        android:text="Escreva um programa que recebe dois números inteiros e informa o resultado das operações soma, subtração, multiplicação e divisão. Considere sempre a ordem em que foram informados."
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/numero_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
